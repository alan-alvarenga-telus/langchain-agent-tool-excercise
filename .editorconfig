# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.

# Root EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88
# JSON files
[*.json]
indent_size = 2

# YAML files
[*.yml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false  # Avoid trimming in Markdown files

# Requirements and text files
[*.{txt,in}]
trim_trailing_whitespace = false

# Configuration files
[*.toml]
indent_size = 4
